{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "types": ["node"],
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "noUnusedLocals": true,
        "target": "es6",
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "lib": [
          "es2017",
          "esnext.asynciterable"
        ],
        "outDir": "dist"
    },

    "include": [
      "src/**/*"
    ],

    "exclude": [
      "node_modules"
    ]
  }
